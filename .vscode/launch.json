  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "run current js",
      "program": "${file}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/babel-node",
      "runtimeArgs": ["experimental-modules"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "run app",
      "program": "${workspaceFolder}/src/app.mjs",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/babel-node",
      "runtimeArgs": ["experimental-modules"]
    }
  ]
}